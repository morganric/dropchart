<div class="col-md-12">

<div class="col-md-4">

<p>
  <%= image_tag @profile.image.url(:standard) %>
</p>

<p>
  <%= link_to @profile.website,  @profile.website %>
</p>

<div class="">

  <%= image_tag ("http://placehold.it/300x250")%>
</div>



</div>

<div class="col-md-8">

<h1>
  <%= @profile.display_name %>
</h1>




<div class="well">
  <%= @profile.bio %>

  <p class="pull-right">
<%= link_to 'Edit', edit_profile_path(@profile) %> 
</p>
<br/>
</div>





<hr/>

   <% @profile.user.drops.each_with_index do |drop, index| %>
    <div class="box">


    <%= link_to image_tag(drop.cover.url(:thumbnail), class: "pull-left img-thumbnail", style: "margin-right:10px;"), user_drop_path(:id => drop.slug, :user_id => drop.user.profile.slug) %>

     <h3 style="position:relativ; top:0px;">
     <%= link_to drop.track, user_drop_path(:id => drop.slug, :user_id => drop.user.profile.slug) %>
     <br/>
      <small>

        <strong>by</strong>
        <%= drop.artist %>

        <strong>on</strong>
        <%= drop.label %>
        <br/>
        <strong>via</strong>
        <%= link_to drop.user.profile.slug, vanity_profile_path(drop.user.profile.slug) %>
   
        </small>
     </h3>



      <% drop.tags.limit(5).each do |tag| %>
        <label class="label label-default"><%= link_to tag, tag_path(tag.name), class: "white" %></label>
      <% end %>
      <br/>
            </div>
              <hr/>
    <% end %>



</div>

</div>


