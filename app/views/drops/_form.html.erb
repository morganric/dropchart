<%= simple_form_for(@drop) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

 
  <div class="col-md-6">
    
    <%= f.input :track %>
    <%= f.input :artist %>
    <%= f.input :label %>
    <%= f.input :album %>


     <%= f.label :audio %>
     <%= f.file_field :audio %>
   </div>
 <div class="col-md-6">

    <%= f.label :cover %>
    <%= f.file_field :cover %>
      <br/> 
    <%= f.input :release_date %>
    <%= f.input :url %>
    <%= f.input :credits %>
    <%= f.input :tag_list %>
</div>
<br/> 
    <h3>Admin</h3>
    <hr/>

    <% if user_signed_in? %>
      <% if current_user.try(:admin?) %>
        <%= f.input :user_id %>
        <%= f.input :slug %>
        <%= f.label :clip %>
        <%= f.file_field :clip %>
      <% end %>
    <% end %>

       
    <br/> 
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


